            - $ref: "#/components/schemas/IntegrationAssetSourceEnum"
        sourceReference:
          description: External reference identifier for the source system
          type: string
        managedContentText:
          description: Content text (will create/update ManagedContent record)
          type: string
        documentation:
          description: Documentation for the integration asset
          type: string
        versions:
          description: List of versions for this integration asset
          type: array
          items:
            type: string
    IntegrationAssetCollectionRepresentation:
      description: Represents a collection of IntegrationAsset records
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      properties:
        items:
          description: List of IntegrationAsset records
          type: array
          items:
            $ref: "#/components/schemas/IntegrationAssetOutputRepresentation"
        count:
          description: Total number of records returned
          type: integer



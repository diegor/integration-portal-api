        - "McpServer"

    IntegrationAssetOutputRepresentation:
      description: Represents an IntegrationAsset record with its versions
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      required:
        - id
        - name
        - type
        - source
      properties:
        id:
          description: The record Id
          type: string
        name:
          description: The name of the integration asset
          type: string
        description:
          description: Detailed description of the integration asset
          type: string
        type:
          description: The type of integration asset
          oneOf:
            - $ref: "#/components/schemas/IntegrationAssetTypeEnum"
        source:
          description: The source system where this asset originates
          oneOf:
            - $ref: "#/components/schemas/IntegrationAssetSourceEnum"
        sourceReference:
          description: External reference identifier for the source system
          type: string
        portalId:
          description: The ID of the parent IntegrationPortal
          type: string
        managedContentId:
          description: The ID of the associated Managed Content
          type: string
        managedContentText:
          description: Temporary text field for content (will create/update ManagedContent)
          type: string
        versions:
          description: List of versions for this integration asset
          type: array
          items:
            $ref: "#/components/schemas/IntegrationAssetVersionRepresentation"
    IntegrationAssetVersionRepresentation:

    # Asset Publication Schemas
    PublishAssetsInputRepresentation:
      description: Request to publish multiple available assets
      x-connect:
        representation-type: input
        min-version: 258
      type: object
      required:
        - assets
      properties:
        assets:
          description: Array of assets to publish
          type: array
          items:
            $ref: "#/components/schemas/AssetPublishItemInputRepresentation"

    AssetPublishItemInputRepresentation:
      description: Individual asset to publish
      x-connect:
        representation-type: input
        min-version: 258
      type: object
      required:
        - id
        - source
      properties:
        id:
          description: The external asset ID
          type: string
        source:
          description: The source system
          type: string
          enum: ["ApiCatalog"]

    PublishAssetsRepresentation:
      description: Result of bulk asset publication
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      properties:
        published:
          description: Successfully published assets
          type: array
          items:
            $ref: "#/components/schemas/PublishedAssetResultRepresentation"
        failed:
          description: Failed asset publications
          type: array
          items:
            $ref: "#/components/schemas/FailedAssetResultRepresentation"
        totalCount:
          type: integer
          x-connect:
            description: Total number of assets processed
        successCount:
          type: integer
          x-connect:
            description: Number of successfully published assets
        failureCount:
          type: integer
          x-connect:
            description: Number of assets that failed to publish

    PublishedAssetResultRepresentation:
      description: Successfully published asset result
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      properties:
        externalId:
          type: string
          x-connect:
            description: The external ID of the published asset
        integrationAssetId:
          type: string
          x-connect:
            description: The ID of the created IntegrationAsset
        name:
          type: string
          x-connect:
            description: The name of the published asset

    FailedAssetResultRepresentation:
      description: Failed asset publication result
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      properties:
        externalId:
          type: string
          x-connect:
            description: The external ID of the failed asset
        error:
          type: string
          x-connect:
            description: The error message describing the failure
        reason:
          type: string
          x-connect:
            description: The reason for the failure

    # Enhanced Available Asset Schema
    AvailableAssetOutputRepresentation:
      description: Represents an available asset from any source
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      required:
        - id
        - name
        - source
      properties:
        id:
          description: The external asset ID
          type: string
        name:
          description: The name of the available asset
          type: string
        assetType:
          description: The type of the asset
          oneOf:
            - $ref: "#/components/schemas/IntegrationAssetTypeEnum"
        label:
          description: Human-readable label for the asset
          type: string
        description:
          description: Description of the available asset
          type: string
        source:
          description: Source system where this asset originates
          oneOf:
            - $ref: "#/components/schemas/IntegrationAssetSourceEnum"
        extSourceIdentifier:
          description: External source identifier for the asset
          type: string
        apiVersions:
          description: List of available versions for this asset
          type: array
          items:
            $ref: "#/components/schemas/AvailableAssetVersionRepresentation"

    AvailableAssetVersionRepresentation:
      description: Represents a version of an available asset
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      required:
        - version
      properties:
        id:
          description: The version Id
          type: string
        version:
          description: The version identifier
          type: string
        name:
          description: The name of the version
          type: string
        description:
          description: Description of the version
          type: string

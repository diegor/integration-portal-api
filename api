  schemas:
    # Portal Representations
    IntegrationPortalInputRepresentation:
      description: Input to create or update an IntegrationPortal record
      x-connect:
        representation-type: input
        min-version: 258
      type: object
      required:
        - name
      properties:
        name:
          description: The name of the integration portal
          type: string
        description:
          description: Description of the integration portal
          type: string
        siteUrlPrefix:
          description: URL path prefix for Experience Cloud Site (auto-generated if not provided)
          type: string
          pattern: "^[a-zA-Z0-9-_]+$"
          maxLength: 40

    IntegrationPortalOutputRepresentation:
      description: Represents an IntegrationPortal record
      x-connect:
        representation-type: output
        min-version: 258
      type: object
      required:
        - id
        - name
      properties:
        id:
          description: The record Id
          type: string
        name:
          description: The name of the integration portal
          type: string
        description:
          description: Description of the integration portal
          type: string
        managedContentSpaceId:
          description: The ID of the associated Managed Content Space
          type: string
        networkId:
          description: The ID of the associated Experience Cloud Network
          type: string
        siteId:
          description: The ID of the associated Experience Cloud Site
          type: string
        siteUrlPrefix:
          description: The URL path prefix of the Experience Cloud Site
          type: string
        siteUrl:
          description: The full URL of the Experience Cloud Site
          type: string


    IntegrationPortalMCPOutputRepresentation:
      description: Represents an IntegrationPortal record
